{% extends "layout.njk" %}

{% block head %}
 <title>Conte√∫dos</title>
{% endblock %}

{% block content %}
    
    <body class="content3">
        <div id="back">
            <a href="/">Voltar</a>
        </div>

        <h1 class = "title">Cursos Rocketseat</h1>
        
        <section class="cards">
            {% for item in items %}
            <div class="card" id="{{item.id}}">

                <div class="card-image-container">
                    <img src="{{item.logo}}" alt="logo-curso">
                </div>
                <div class="card-content">
                    <p>{{item.title}}</p>
                    <p class=modules>{{item.modules}}</p>
                    <p class="card-price">{{item.price}}</p>
                </div>
            </div>
            {% endfor %}

        </section>

        <div class="modal-overlay">
            <div class="modal">
                <a class="close-modal">
                    <i class="material-icons">close</i>
                </a>

                <div class="modal-content">
                    <iframe src="" frameborder="0"></iframe>
                </div>

                <a class="maximize-buttom">
                    <i class="material-icons">fullscreen</i>
                </a>
            </div>

        </div>

        <script src="/scripts2-2.js"></script>
     
{% endblock %}